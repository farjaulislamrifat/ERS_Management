@using ERS_Management.Models.Enums
@model ERS_Management.PaginatedList.PaginatedList<ERS_Management.Models.Entries>

@{
    ViewData["Title"] = "Inventory List";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<h1>Entries</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="input-group">
        <input name="searchString" class="form-control" placeholder="Search…" value="@ViewData["CurrentFilter"]" />
        <div class="input-group-text">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>

            <th>
                SerialNo
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AreaSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">Area</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LocationSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">Location</a>
            </th>

            <th>Brand</th>
            <th>Model</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AreaSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">Item Type</a>

            </th>
            <th>Qty</th>
            <th>Last Update</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AreaSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">Status</a>
              
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.SerialNumber)</td>
                <td>@Html.DisplayFor(m => item.Area)</td>
                <td>@Html.DisplayFor(m => item.Location)</td>
                <td>@Html.DisplayFor(m => item.Brand)</td>
                <td>@Html.DisplayFor(m => item.Model)</td>
                <td>@Html.DisplayFor(m => item.ItemType)</td>
                <td>@Html.DisplayFor(m => item.Quantity)</td>
                <td>@Html.DisplayFor(m => item.LastUpdate)</td>
                <td>
                    <span class="badge
        @(item.Status == EntryStatus.Running ? "bg-success" :
                                item.Status == EntryStatus.Damaged ? "bg-danger" :
                                item.Status == EntryStatus.Standby ? "bg-warning text-dark" :
                                "bg-secondary")">
                        @Html.DisplayFor(m => item.Status)
                    </span>
                </td>
                <td>
                    @if(item.Username == User.Identity.Name)
                    {
                        
                    <a asp-action="Edit" asp-route-id="@item.SerialNumber" class="btn btn-sm btn-warning">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.SerialNumber" class="btn btn-sm btn-info">Details</a>
                   
                    @if (User.IsInRole( "Admin"))
                    {
                        
                    <a asp-action="Delete" asp-route-id="@item.SerialNumber" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @prevDisabled">
            <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-sortOrder="@ViewData["CurrentSort"]">@i</a>
            </li>
        }

        <li class="page-item @nextDisabled">
            <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>





