@model ERS_Management.Models.Entries
@using ERS_Management.Models
@{
    ViewData["Title"] = "Edit Entry";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <!-- Header with Back Button -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3 rounded-circle p-2">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h2 class="mb-0 fw-bold text-primary">Edit Asset Entry</h2>
            </div>

            <!-- Main Card -->
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Update Details</h5>
                </div>
                <div class="card-body p-5">

                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"></div>
                        <input type="hidden" asp-for="SerialNumber" />

                        <!-- Responsive Grid -->
                        <div class="row g-4">

                            <!-- Area -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Area" class="form-control" placeholder="Area" />
                                    <label><i class="bi bi-geo-alt-fill text-primary me-2"></i>Area</label>
                                    <span asp-validation-for="Area" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Location" class="form-control" placeholder="Location" />
                                    <label><i class="bi bi-building text-info me-2"></i>Location</label>
                                    <span asp-validation-for="Location" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Brand -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Brand" class="form-control" placeholder="Brand" />
                                    <label><i class="bi bi-tag-fill text-success me-2"></i>Brand</label>
                                    <span asp-validation-for="Brand" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Model -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Model" class="form-control" placeholder="Model" />
                                    <label><i class="bi bi-box-seam text-warning me-2"></i>Model</label>
                                    <span asp-validation-for="Model" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Item Type -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ItemType" class="form-control" placeholder="Item Type" />
                                    <label><i class="bi bi-layers text-purple me-2"></i>Item Type</label>
                                    <span asp-validation-for="ItemType" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- User Purpose -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserPurpose" class="form-control" placeholder="User Purpose" />
                                    <label><i class="bi bi-person-check text-teal me-2"></i>Purpose</label>
                                    <span asp-validation-for="UserPurpose" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Asset No -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="AssetNo" class="form-control" placeholder="Asset No" />
                                    <label><i class="bi bi-hash text-muted me-2"></i>Asset No</label>
                                    <span asp-validation-for="AssetNo" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Serial No -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="SerialNo" class="form-control" placeholder="Serial No" />
                                    <label><i class="bi bi-upc-scan text-danger me-2"></i>Serial No</label>
                                    <span asp-validation-for="SerialNo" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Quantity -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Quantity" type="number" class="form-control" min="1" placeholder="Quantity" />
                                    <label><i class="bi bi-calculator text-indigo me-2"></i>Quantity</label>
                                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Status (Enum Dropdown) -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Status"
                                  
                                            class="form-select"
                                            id="statusSelect">
                                        <option value="">Select Status</option>
                                        <option value="Running">Running</option>
                                        <option value="Damaged">Damaged</option>
                                        <option value="Standby">Standby</option>
                                        <option value="Retired">Retired</option>
                                    </select>
                                    <label for="statusSelect"><i class="bi bi-toggle-on text-success me-2"></i>Status</label>
                                    <span asp-validation-for="Status" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="col-md-6" style="display:none">
                                <div class="form-floating">
                                    <input asp-for="Username" class="form-control" placeholder="Username" />
                                    <label><i class="bi bi-person-circle text-primary me-2"></i>Username</label>
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Created At -->
                            <div class="col-md-6" style="display:none">
                                <div class="form-floating">
                                    <input asp-for="CreatedAt" class="form-control" readonly />
                                    <label><i class="bi bi-calendar-plus text-secondary me-2"></i>Created At</label>
                                    <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Last Update -->
                            <div class="col-md-6" style="display:none">
                                <div class="form-floating">
                                    <input asp-for="LastUpdate" class="form-control" readonly />
                                    <label><i class="bi bi-calendar-check text-secondary me-2"></i>Last Updated</label>
                                    <span asp-validation-for="LastUpdate" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Remarks (Full Width) -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Remarks" class="form-control" placeholder="Remarks" style="height: 110px;"></textarea>
                                    <label><i class="bi bi-chat-dots-fill text-muted me-2"></i>Remarks</label>
                                    <span asp-validation-for="Remarks" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-check-circle-fill me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Footer Link -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="text-muted small">
                    <i class="bi bi-list-ul me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Bootstrap Validation -->
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}