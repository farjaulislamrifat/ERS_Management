@model ERS_Management.Models.Entries
@{
    ViewData["Title"] = "Edit Asset";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">

            <!-- Back + Title -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Home" class="btn btn-outline-secondary rounded-circle p-2 me-3 shadow-sm">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h2 class="h4 mb-0 fw-bold text-primary">
                    <i class="bi bi-pencil-square me-2"></i>Edit Asset
                </h2>
            </div>

            <!-- Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-semibold">Update Asset Details</h5>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="SerialNumber" />
                        <input type="hidden" asp-for="Username" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="LastUpdate" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                        <div class="row g-3 g-md-4">

                            <!-- Area -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Area" class="form-control" placeholder="Area" required />
                                    <label>Area</label>
                                    <span asp-validation-for="Area" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Location" class="form-control" placeholder="Location" />
                                    <label>Location</label>
                                    <span asp-validation-for="Location" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Brand -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Brand" class="form-control" placeholder="Brand" />
                                    <label>Brand</label>
                                    <span asp-validation-for="Brand" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Model -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Model" class="form-control" placeholder="Model" />
                                    <label>Model</label>
                                    <span asp-validation-for="Model" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Item Type -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ItemType" class="form-control" placeholder="Item Type" />
                                    <label>Item Type</label>
                                    <span asp-validation-for="ItemType" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Purpose -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserPurpose" class="form-control" placeholder="Purpose" />
                                    <label>Purpose</label>
                                    <span asp-validation-for="UserPurpose" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Asset No -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="AssetNo" class="form-control" placeholder="Asset No" />
                                    <label>Asset No</label>
                                    <span asp-validation-for="AssetNo" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Serial No -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="SerialNo" class="form-control" placeholder="Serial No" />
                                    <label>Serial No</label>
                                    <span asp-validation-for="SerialNo" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Quantity -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Quantity" type="number" min="1" class="form-control" placeholder="Quantity" required />
                                    <label>Quantity</label>
                                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Status -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Status" class="form-select" required>
                                        <option value="">Choose Status</option>
                                        <option value="Running">Running</option>
                                        <option value="Damaged">Damaged</option>
                                        <option value="Standby">Standby</option>
                                        <option value="Retired">Retired</option>
                                    </select>
                                    <label>Status</label>
                                    <span asp-validation-for="Status" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Remarks -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Remarks" class="form-control" placeholder="Remarks" style="height: 100px"></textarea>
                                    <label>Remarks (Optional)</label>
                                    <span asp-validation-for="Remarks" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm py-3 fw-semibold">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List -->
            <div class="text-center mt-4">
                <a asp-action="Home" class="text-muted small">
                    Back to Inventory
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select ~ label {
            color: #0d6efd;
            font-weight: 500;
        }

        .form-floating > .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

        .card {
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .btn-primary {
            background: linear-gradient(135deg, #0d6efd, #0b5ed7);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #0b5ed7, #094fb8);
                transform: translateY(-1px);
            }

        .rounded-circle {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bootstrap form validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            forms.forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}