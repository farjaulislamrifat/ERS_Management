@model ERS_Management.Models.Entries
@{
    ViewData["Title"] = "Log Entry";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        background: #f5f7fa;
        font-family: 'Segoe UI', sans-serif;
    }

    .fit {
        max-height: 100vh;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .card {
        border: 0;
        border-radius: 1rem;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 4px 15px rgba(0,0,0,.1);
    }

    .card-header {
        background: #1d4ed8;
        color: #fff;
        padding: .75rem 1rem;
        font-weight: 600;
        font-size: 1rem;
        text-align: center;
    }

    .form-control, .form-select {
        height: 36px;
        font-size: .9rem;
        border-radius: .5rem;
        border: 1.4px solid #d1d5db;
        padding: .4rem .6rem;
        transition: border .15s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #1d4ed8;
            box-shadow: 0 0 0 2px rgba(29,78,216,.2);
        }

    textarea.form-control {
        height: 56px;
        resize: none;
    }

    .input-group .form-select {
        border-radius: .5rem 0 0 .5rem;
    }

    .input-group .btn {
        border-radius: 0 .5rem .5rem 0;
        width: 36px;
        background: #e5e7eb;
        border: 1.4px solid #d1d5db;
        border-left: 0;
        font-weight: 900;
        font-size: 1rem;
        color: #4b5563;
    }

        .input-group .btn:hover {
            background: #d1d5db;
        }

    .lbl {
        font-size: .75rem;
        font-weight: 600;
        color: #374151;
        text-transform: uppercase;
        letter-spacing: .5px;
        margin-bottom: .3rem;
    }

    .btn-save {
        background: #dc2626;
        color: #fff;
        border: none;
        border-radius: .6rem;
        height: 40px;
        font-weight: 600;
        font-size: 1rem;
    }

        .btn-save:hover {
            background: #b91c1c;
        }

    .btn-back {
        background: #6b7280;
        color: #fff;
        border: none;
        border-radius: .6rem;
        height: 40px;
        font-size: 1rem;
    }

        .btn-back:hover {
            background: #4b5563;
        }

    .info {
        font-size: .75rem;
        color: #6b7280;
        display: flex;
        justify-content: space-between;
        margin-top: .75rem;
    }

    .select2-container--bootstrap-5 .select2-selection {
        height: 36px !important;
        display: flex;
        align-items: center;
        border-radius: .5rem;
        border: 1.4px solid #d1d5db;
    }

    .select2-container {
        width: 100% !important;
    }

    .required {
        color: #dc2626;
    }

    .hint {
        font-size: .7rem;
        color: #6b7280;
        margin-top: .2rem;
    }
</style>


<div class="container-fluid fit p-2 p-md-3">
    <div class="row justify-content-center h-100">
        <div class="col-lg-7 col-xl-6 h-100 d-flex flex-column">
            <div class="card flex-grow-1 d-flex flex-column">
                <div class="card-header">QUICK INVENTORY LOG</div>

                <div class="card-body p-3 flex-grow-1 overflow-auto">
                    <form asp-action="Create" id="createEntryForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-1 mb-2 rounded"></div>

                        <!-- Row 1 -->
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <div class="lbl">Area <span class="required">*</span></div>
                                <div class="input-group">
                                    <select asp-for="Area" id="dropdown-Area" class="form-select select2-editable" asp-items="ViewBag.Areas"></select>
                                    <button type="button" class="btn add-new" data-field="AreaId">+</button>
                                </div>
                                <input type="hidden" name="AreaId_New" />
                                <span asp-validation-for="Area" class="text-danger hint"></span>
                            </div>

                            <div class="col-6">
                                <div class="lbl">Location <span class="required">*</span></div>
                                <div class="input-group">
                                    <select asp-for="Location" id="dropdown-Location" class="form-select select2-editable" asp-items="ViewBag.Locations"></select>
                                    <button type="button" class="btn add-new" data-field="LocationId">+</button>
                                </div>
                                <input type="hidden" name="LocationId_New" />
                                <span asp-validation-for="Location" class="text-danger hint"></span>
                            </div>
                        </div>

                        <!-- Row 2 -->
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <div class="lbl">Brand <span class="required">*</span></div>
                                <div class="input-group">
                                    <select asp-for="Brand" id="dropdown-Brand" class="form-select select2-editable" asp-items="ViewBag.Brands"></select>
                                    <button type="button" class="btn add-new" data-field="BrandId">+</button>
                                </div>
                                <input type="hidden" name="BrandId_New" />
                                <span asp-validation-for="Brand" class="text-danger hint"></span>
                            </div>

                            <div class="col-6">
                                <div class="lbl">Model <span class="required">*</span></div>
                                <div class="input-group">
                                    <select asp-for="Model" id="dropdown-Model" class="form-select select2-editable" asp-items="ViewBag.Models"></select>
                                    <button type="button" class="btn add-new" data-field="ModelId">+</button>
                                </div>
                                <input type="hidden" name="ModelId_New" />
                                <span asp-validation-for="Model" class="text-danger hint"></span>
                            </div>
                        </div>

                        <!-- Row 3 -->
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <div class="lbl">Item Type <span class="required">*</span></div>
                                <div class="input-group">
                                    <select asp-for="ItemType" id="dropdown-ItemType" class="form-select select2-editable" asp-items="ViewBag.ItemTypes"></select>
                                    <button type="button" class="btn add-new" data-field="ItemTypeId">+</button>
                                </div>
                                <input type="hidden" name="ItemTypeId_New" />
                                <span asp-validation-for="ItemType" class="text-danger hint"></span>
                            </div>

                            <div class="col-6">
                                <div class="lbl">Quantity <span class="required">*</span></div>
                                <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="1" />
                                <span asp-validation-for="Quantity" class="text-danger hint"></span>
                            </div>
                        </div>

                        <!-- Row 4 -->
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <div class="lbl">Asset No</div>
                                <input asp-for="AssetNo" class="form-control" placeholder="ASSET-001" />
                                <span asp-validation-for="AssetNo" class="text-danger hint"></span>
                            </div>

                            <div class="col-6">
                                <div class="lbl">Serial No</div>
                                <input asp-for="SerialNo" class="form-control" placeholder="SN123456" />
                                <span asp-validation-for="SerialNo" class="text-danger hint"></span>
                            </div>
                        </div>

                        <!-- Purpose -->
                        <div class="mb-2">
                            <div class="lbl">Purpose</div>
                            <div class="input-group">
                                <select asp-for="UserPurpose" id="dropdown-Purpose" class="form-select select2-editable" asp-items="ViewBag.Purposes"></select>
                                <button type="button" class="btn add-new" data-field="UserPurposeId">+</button>
                            </div>
                            <input type="hidden" name="UserPurposeId_New" />
                            <span asp-validation-for="UserPurpose" class="text-danger hint"></span>
                        </div>

                        <!-- Remarks -->
                        <div class="mb-2">
                            <div class="lbl">Remarks</div>
                            <textarea asp-for="Remarks" class="form-control" rows="1" placeholder="Optional notes"></textarea>
                        </div>

                        <!-- Info -->
                        <div class="info">
                            <div>By: @User.Identity?.Name</div>
                            <div>@DateTime.Now.ToString("MMM dd, HH:mm")</div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-2 mt-3">
                            <button type="submit"  class="btn btn-save flex-fill">Create Entry (Enter)</button>
                            <a asp-action="Index" class="btn btn-back flex-fill">Back (Esc)</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Add New Modal -->
<div class="modal fade" id="addNewModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content rounded-3">
            <div class="modal-header py-2 border-0">
                <h6 class="modal-title fs-6">Add <span id="modalField"></span></h6>
                <button type="button" class="btn-close btn-close-sm" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body py-2">
                <input type="text" class="form-control form-control-sm" id="newValueInput" placeholder="Type and press Enter" />
                <div class="text-danger small mt-1" id="modalError"></div>
            </div>

            <div class="modal-footer py-1 border-0">
                <button type="button" class="btn btn-success btn-sm" id="saveNewBtn">Add</button>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {

            // INIT SELECT2
            $('.select2-editable').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: 'Select...'
            });

            // OPEN FIRST DROPDOWN
            setTimeout(() => {
                $('#dropdown-Area').select2('open');
            }, 150);

            // ADD NEW MODAL
            let field = '';

            $('.add-new').on('click', function () {
                field = $(this).data('field');
                $('#modalField').text(field);
                $('#newValueInput').val('').focus();
                $('#modalError').text('');
                $('#addNewModal').modal('show');
            });

            $('#newValueInput').on('keypress', function (e) {
                if (e.which === 13) $('#saveNewBtn').click();
            });

            $('#saveNewBtn').on('click', function () {
                const val = $('#newValueInput').val().trim();
                if (!val) return $('#modalError').text('Required');

                const $sel = $(`#dropdown-${field.replace("Id", "")}`);
                $sel.append(new Option(val, val, true, true)).trigger('change');
                $(`input[name="${field}_New"]`).val('new');

                $('#addNewModal').modal('hide');
            });

            // ENTER TO SUBMIT (DISABLED WHEN SELECT2 OPEN)
            $(document).on('keydown', function (e) {
                if (e.key === 'Enter'
                    && !$('#addNewModal').hasClass('show')
                    && $('input, textarea, select').is(':focus')
                    && $('.select2-container--open').length === 0) {

                    e.preventDefault();
                    $('#createEntryForm').submit();
                }

                if (e.key === 'Escape') {
                    window.location = '@Url.Action("Index")';
                }
            });



        });
    </script>
}
