@model ERS_Management.Models.FaultEntry
@{
    ViewData["Title"] = "Fault Details";
    var isResolved = !string.IsNullOrEmpty(Model.ResolvedBy) && Model.ResolvedTime.HasValue;
    var statusClass = isResolved ? "bg-success" : "bg-warning text-dark";
    var statusText = isResolved ? "Resolved" : "Open";
}

<div class="container-fluid py-4 py-md-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <!-- ==================== MAIN CARD ==================== -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-success text-white px-4 py-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0 fw-bold d-flex align-items-center">
                            <i class="bi bi-file-earmark-text me-2"></i> Fault #@Model.No
                        </h3>
                        <small class="opacity-80">Logged on @Model.FaultTime:yyyy-MM-dd HH:mm</small>
                    </div>
                    <span class="badge  @statusClass fs-6 px-3 py-2">
                        <i class="bi @(isResolved ? "bi-check-circle" : "bi-exclamation-triangle") me-1"></i>
                        @statusText
                    </span>
                </div>

                <div class="card-body p-4 p-md-5">
                    <!-- ==================== FAULT INFO ==================== -->
                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-danger bg-opacity-10 text-danger rounded-3 p-3">
                                        <i class="bi bi-clock-history fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold text-muted mb-1">Fault Time</h6>
                                    <p class="mb-0 fs-5">@Model.FaultTime:yyyy-MM-dd HH:mm</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                                        <i class="bi bi-person-fill fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold text-muted mb-1">Reported By</h6>
                                    <p class="mb-0 fs-5">@Model.ReportedBy</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-info bg-opacity-10 text-info rounded-3 p-3">
                                        <i class="bi bi-building fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold text-muted mb-1">Site</h6>
                                    <p class="mb-0 fs-5">@Model.Site</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-secondary bg-opacity-10 text-secondary rounded-3 p-3">
                                        <i class="bi bi-geo-alt-fill fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold text-muted mb-1">Location</h6>
                                    <p class="mb-0 fs-5">@Model.Location</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-start gap-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-dark bg-opacity-10 text-dark rounded-3 p-3">
                                        <i class="bi bi-tags-fill fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold text-muted mb-1">Category</h6>
                                    <p class="mb-0 fs-5">@Model.Category</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <hr class="my-4">
                            <h5 class="fw-bold text-danger mb-3">
                                <i class="bi bi-exclamation-circle-fill me-2"></i> Fault Description
                            </h5>
                            <div class="bg-light rounded-3 p-4">
                                <p class="mb-0 text-dark" style="white-space: pre-line;">@Model.Description</p>
                            </div>
                        </div>
                    </div>

                    <!-- ==================== RESOLUTION TIMELINE (if resolved) ==================== -->
                    @if (isResolved)
                    {
                        <div class="border-start border-success border-4 ps-4 py-2 mb-5">
                            <h5 class="fw-bold text-success mb-4">
                                <i class="bi bi-check2-all me-2"></i> Resolution Details
                            </h5>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="flex-shrink-0">
                                            <div class="bg-success bg-opacity-10 text-success rounded-3 p-3">
                                                <i class="bi bi-person-check-fill fs-4"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fw-semibold text-muted mb-1">Resolved By</h6>
                                            <p class="mb-0 fs-5">@Model.ResolvedBy</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="flex-shrink-0">
                                            <div class="bg-success bg-opacity-10 text-success rounded-3 p-3">
                                                <i class="bi bi-calendar-check fs-4"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fw-semibold text-muted mb-1">Resolved Time</h6>
                                            <p class="mb-0 fs-5">@Model.ResolvedTime:yyyy-MM-dd HH:mm</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="flex-shrink-0">
                                            <div class="bg-success bg-opacity-10 text-success rounded-3 p-3">
                                                <i class="bi bi-stopwatch fs-4"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="fw-semibold text-muted mb-1">Duration</h6>
                                            <p class="mb-0 fs-5 fw-bold text-success">@Model.Duration<strong>H</strong></p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <h6 class="fw-semibold text-muted mb-2">Resolution Steps</h6>
                                    <div class="bg-light rounded-3 p-4 border-start border-success border-3">
                                        <p class="mb-0 text-dark" style="white-space: pre-line;">@Model.Resolution</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning rounded-3 d-flex align-items-center gap-3">
                            <i class="bi bi-hourglass-split fs-3"></i>
                            <div>
                                <strong>This fault is still open.</strong><br />
                                <small>No resolution has been recorded yet.</small>
                            </div>
                        </div>
                    }

                    <!-- ==================== REMARKS ==================== -->
                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mt-4">
                            <h6 class="fw-semibold text-muted mb-2">
                                <i class="bi bi-chat-dots me-2"></i> Additional Remarks
                            </h6>
                            <div class="bg-secondary bg-opacity-10 rounded-3 p-4">
                                <p class="mb-0" style="white-space: pre-line;">@Model.Remarks</p>
                            </div>
                        </div>
                    }

                    <!-- ==================== AUDIT INFO ==================== -->
                    <div class="mt-5 pt-4 border-top">
                        <div class="row text-muted small">
                            <div class="col-md-6">
                                <strong>Logged By:</strong> @Model.Username
                            </div>
                            <div class="col-md-6 text-md-end">
                                <strong>Logged At:</strong> @Model.FaultTime:yyyy-MM-dd HH:mm (BDT)
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ==================== ACTION BUTTONS ==================== -->
                <div class="card-footer bg-light border-0 px-4 py-4">
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-between">
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.No" class="btn btn-warning btn-lg px-4">
                                <i class="bi bi-pencil-square me-2"></i> Edit
                            </a>
                            <button type="button" class="btn btn-outline-primary btn-lg px-4" onclick="window.print()">
                                <i class="bi bi-printer me-2"></i> Print
                            </button>
                        </div>
                        <a asp-action="Home" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Print Styles -->
    

    <script>
        // Optional: Add copy-to-clipboard for key fields
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.copy-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const text = this.dataset.copy;
                    navigator.clipboard.writeText(text).then(() => {
                        const tooltip = this.querySelector('.tooltiptext');
                        const original = tooltip.textContent;
                        tooltip.textContent = 'Copied!';
                        setTimeout(() => tooltip.textContent = original, 2000);
                    });
                });
            });
        });
    </script>
}